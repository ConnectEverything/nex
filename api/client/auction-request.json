{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/synadia-io/nex/api/client/auction-request",
  "title": "AuctionRequest",
  "type": "object",
  "properties": {
    "arch": {
      "type": "string",
      "description": "The architecture auction for",
      "enum": [
        "amd64",
        "arm64"
      ]
    },
    "os": {
      "type": "string",
      "description": "The operating system to auction for",
      "enum": [
        "linux",
        "darwin",
        "windows"
      ]
    },
    "tags": {
      "type": "array",
      "description": "A list of tags to associate with the node during auction",
      "items": {
        "type": "string"
      }
    },
    "agent_type": {
      "type": "array",
      "description": "The type of agent to auction for",
      "items": {
        "$ref": "#/definitions/NexWorkload"
      }
    }
  },
  "required": [],
  "definitions": {
    "NexWorkload": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
