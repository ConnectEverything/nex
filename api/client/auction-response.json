{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/synadia-io/nex/api/client/auction-response",
  "title": "AuctionResponse",
  "type": "object",
  "properties": {
    "node_id": {
      "type": "string",
      "description": "The unique identifier of the node"
    },
    "nexus": {
      "type": "string",
      "description": "The name of the nexus - if assigned"
    },
    "version": {
      "type": "string",
      "description": "The version of the node"
    },
    "uptime": {
      "type": "string",
      "description": "The uptime of the node"
    },
    "target_xkey": {
      "type": "string",
      "description": "The target nodes xkey"
    },
    "tags": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "running_workloads": {
      "type": "integer",
      "description": "The number of running workloads on the node"
    }
  },
  "required": ["node_id", "version", "uptime", "target_xkey", "running_workloads"],
  "additionalProperties": false
}
