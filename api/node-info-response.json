{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "io.nats.nex.v2.node_info_response",
  "title": "NodeInfoResponse",
  "type": "object",
  "properties": {
    "node_id": {
      "type": "string",
      "description": "The unique identifier of the node"
    },
    "version": {
      "type": "string",
      "description": "The version of the node"
    },
    "uptime": {
      "type": "string",
      "description": "The uptime of the node"
    },
    "target_xkey": {
      "type": "string",
      "description": "The target nodes xkey"
    },
    "tags": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "workload_summaries": {
      "type": "array",
      "items": {
        "$ref": "./shared-workload-summary.json"
      }
    }
  },
  "required": [
    "node_id",
    "version",
    "uptime",
    "target_xkey",
    "tags",
    "workload_summaries"
  ]
}
